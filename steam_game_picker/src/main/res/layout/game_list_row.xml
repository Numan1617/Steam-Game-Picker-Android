<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/steam_game_logo_width"
            android:layout_height="@dimen/steam_game_logo_height"
            android:id="@+id/gameLogo"
            android:layout_marginRight="@dimen/game_list_row_horizontal_margin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/game_list_row_horizontal_margin"
            android:id="@+id/gameTitle" />


    </LinearLayout>
</LinearLayout>